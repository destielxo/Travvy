<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorCyan"
    android:padding="20sp"
    tools:context="com.pervy_sage.travvy.CurrLoactionFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ivMarker"
        android:background="@drawable/ic_location_marker"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="80sp" />

        <LinearLayout
            android:layout_marginLeft="25sp"
            android:layout_width="0dp"
            android:textDirection="rtl"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCurrAdressLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AddressLine"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvCurrCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tvCurrPostalCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Postal-Code"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"/>


            <TextView
                android:id="@+id/tvCurrCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"/>
        </LinearLayout>


</LinearLayout>
